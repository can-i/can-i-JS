{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "moduleResolution": "Node",
        "strictNullChecks": false,
        "removeComments": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "target":"es6"
    },
    "exclude": [
        "node_modules",
        "test_legacy"
    ]
}